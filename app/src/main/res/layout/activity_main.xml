    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:onClick="playSnare" />
        <SeekBar
            android:id="@+id/pitch1"
            android:layout_below="@id/button1"
            android:layout_width="125dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Adjust pitch"
            android:layout_below="@id/pitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:onClick="playKick" />
        <SeekBar
            android:id="@+id/pitch2"
            android:layout_below="@id/button2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Adjust pitch"
            android:layout_below="@id/pitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:onClick="playHat" />
        <SeekBar
            android:id="@+id/pitch3"
            android:layout_below="@id/button3"
            android:layout_width="125dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Adjust pitch"
            android:layout_below="@id/pitch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/button4"
            android:layout_width="125dp"
            android:layout_height="125dp" />
        <SeekBar
            android:id="@+id/pitch4"
            android:layout_below="@id/button4"
            android:layout_width="125dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Adjust pitch"
            android:color="#FFFFFF"
            android:layout_below="@id/pitch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
